<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:RosyCrow.Controls"
             x:Class="RosyCrow.Controls.TabCollection"
             x:DataType="controls:TabCollection">
    <ContentView.Resources>
        <DataTemplate x:Key="TabTemplate">
            <controls:BrowserTab Selected="BrowserTab_OnSelected" />
        </DataTemplate>
    </ContentView.Resources>
    <ScrollView HorizontalScrollBarVisibility="Never" Orientation="Horizontal">
        <HorizontalStackLayout HorizontalOptions="Start">
        <CollectionView
            SelectionMode="Single"
            HeightRequest="100"
            ItemsLayout="HorizontalList"
            CanReorderItems="True" 
            ItemsSource="{Binding Tabs}"
            ItemTemplate="{StaticResource TabTemplate}"/>
            <controls:AdderTab Triggered="AdderTab_OnTriggered" />
        </HorizontalStackLayout>
    </ScrollView>
</ContentView>
