<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:RosyCrow.Controls"
             x:Class="RosyCrow.Controls.AdderTab"
             x:DataType="controls:AdderTab">
    <AbsoluteLayout BackgroundColor="Transparent" Margin="7,0">
        <Ellipse
            x:Name="ButtonShape"
            AbsoluteLayout.LayoutBounds="0.5,0.5,30,30"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            Fill="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}">
            <Ellipse.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding Trigger}" />
            </Ellipse.GestureRecognizers>
        </Ellipse>
        <Image
            AbsoluteLayout.LayoutBounds="0,0,1,1"
            AbsoluteLayout.LayoutFlags="All"
            Aspect="AspectFit"
            Source="{AppThemeBinding Light=add_dark.png, Dark=add_light.png}" InputTransparent="True" />
    </AbsoluteLayout>
</ContentView>