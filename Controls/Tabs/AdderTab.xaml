<?xml version="1.0" encoding="utf-8"?>

<tabs:TabButtonBase xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                        xmlns:tabs="clr-namespace:RosyCrow.Controls.Tabs"
                        x:Class="RosyCrow.Controls.Tabs.AdderTab"
                        x:DataType="tabs:AdderTab">
    <AbsoluteLayout BackgroundColor="Transparent">
        <Rectangle
            x:Name="ButtonShape"
            AbsoluteLayout.LayoutBounds="0,0,48,48"
            Fill="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray200}}">
            <Rectangle.Shadow>
                <Shadow Brush="Black" Radius="4" Opacity="0.8" Offset="0,-1" />
            </Rectangle.Shadow>
        </Rectangle>
        <Image
            AbsoluteLayout.LayoutBounds="0,0,1,1"
            AbsoluteLayout.LayoutFlags="All"
            Aspect="AspectFit"
            WidthRequest="32"
            HeightRequest="32"
            Source="{AppThemeBinding Light=create_tab_light.png, Dark=create_tab_dark.png}" InputTransparent="True" />
    </AbsoluteLayout>
</tabs:TabButtonBase>